<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/root_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:visibility="gone"
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Trouble Report"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:gravity="end"
            />
        <LinearLayout
            android:id="@+id/top_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="1"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="0.5dp"
                android:background="@drawable/theme_border_bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="1"
                    android:layout_gravity="start"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_8sdp"
                            android:gravity="start">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textStart"
                                android:text="Attendee"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/_10ssp" />
                            <TextView
                                android:id="@+id/attendee_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eva Maria Linson"
                                android:textColor="@color/text_black"

                                android:textSize="@dimen/_13ssp" />
                            <TextView
                                android:id="@+id/category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_tag"
                                android:drawablePadding="@dimen/_8sdp"
                                android:text="Class A"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"

                                android:textSize="@dimen/_13ssp" />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:gravity="center"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="Guest : "
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/_13ssp" />
                            <TextView
                                android:id="@+id/cust_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="4"
                                android:textColor="@color/text_black"

                                android:textSize="@dimen/_16ssp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="start"
                            android:layout_gravity="start"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_gravity="center"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="Adult : "
                                    android:textColor="@color/text_black"
                                    android:textSize="@dimen/_9ssp" />

                                <TextView
                                    android:id="@+id/adult_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="2"
                                    android:textColor="@color/text_black"

                                    android:textSize="@dimen/_9ssp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_gravity="center"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="Child : "
                                    android:textColor="@color/text_black"
                                    android:textSize="@dimen/_9ssp" />

                                <TextView
                                    android:id="@+id/child_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="1"
                                    android:textColor="@color/text_black"

                                    android:textSize="@dimen/_9ssp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_gravity="center"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="Kid  : "
                                    android:textColor="@color/text_black"
                                    android:textSize="@dimen/_9ssp" />

                                <TextView
                                    android:id="@+id/kid_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="1"
                                    android:textColor="@color/text_black"

                                    android:textSize="@dimen/_9ssp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:background="@drawable/theme_border_top">
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                   >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/menu_icon"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_calender"
                            android:contentDescription="TODO" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_8sdp"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 Dec 2023"
                            android:textColor="@color/text_black"

                            android:textSize="@dimen/_13ssp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:textColor="@color/text_black"

                            android:textSize="@dimen/_13ssp" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Registered Events"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/_11sdp"
                    android:padding="@dimen/_3sdp"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:id="@+id/book_frm"
                    android:padding="8dp"
                    app:cardCornerRadius="1dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/theme_bg"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="1"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:gravity="center">

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:orientation="vertical"
                            android:gravity="center|center_vertical"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/event_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center_vertical"
                                android:text="Events"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/_9ssp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/event_guest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="Permit for"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/_9ssp" />


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="1"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/head_tran">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tran_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="center"
            android:weightSum="1"
            android:layout_gravity="start"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="start"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.55"
                    android:background="@drawable/button_dark_gradient"
                    android:enabled="false"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="@string/back"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_blue"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    app:layout_constraintTop_toBottomOf="@id/top_head" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/checkin_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.55"
                    android:background="@drawable/button_gradient"
                    android:enabled="false"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="@string/checkin"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_blue"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    app:layout_constraintTop_toBottomOf="@id/top_head" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</layout>